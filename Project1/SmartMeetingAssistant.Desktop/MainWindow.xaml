<Window x:Class="SmartMeetingAssistant.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartMeetingAssistant.Desktop"
        mc:Ignorable="d"
        Title="Smart Meeting Assistant" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🎤 Smart Meeting Assistant" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
                <Rectangle Width="20"/>
                <Border Background="#27AE60" CornerRadius="5" Padding="8,4">
                    <TextBlock x:Name="StatusText" 
                              Text="Ready" 
                              Foreground="White" 
                              FontWeight="Bold"/>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Meeting Setup -->
            <Border Grid.Column="0" Background="#ECF0F1" CornerRadius="5" Padding="15" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Meeting Setup" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Meeting Title:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="MeetingTitleBox" Padding="8" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Participants:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="ParticipantsBox" Padding="8" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Agenda:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="AgendaBox" 
                            AcceptsReturn="True" 
                            TextWrapping="Wrap" 
                            Height="100" 
                            Padding="8" 
                            Margin="0,0,0,15"/>
                    
                    <Button x:Name="StartMeetingButton" 
                           Content="▶ Start Meeting" 
                           Background="#27AE60" 
                           Foreground="White" 
                           Padding="15,8" 
                           FontWeight="Bold"
                           Click="StartMeetingButton_Click"/>
                    
                    <Button x:Name="StopMeetingButton" 
                           Content="⏹ Stop Meeting" 
                           Background="#E74C3C" 
                           Foreground="White" 
                           Padding="15,8" 
                           FontWeight="Bold"
                           Margin="0,10,0,0"
                           IsEnabled="False"
                           Click="StopMeetingButton_Click"/>
                </StackPanel>
            </Border>
            
            <!-- Center Panel - Live Transcription -->
            <Border Grid.Column="1" Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="15" Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Live Transcription" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <ScrollViewer Grid.Row="1" x:Name="TranscriptScrollViewer" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="TranscriptText" 
                                  TextWrapping="Wrap" 
                                  FontFamily="Consolas" 
                                  FontSize="14"
                                  Text="Waiting for meeting to start..."/>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Right Panel - AI Insights -->
            <Border Grid.Column="2" Background="#F8F9FA" CornerRadius="5" Padding="15" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="AI Insights" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <TabControl Grid.Row="1">
                        <TabItem Header="Action Items">
                            <ScrollViewer>
                                <StackPanel x:Name="ActionItemsPanel">
                                    <TextBlock Text="No action items detected yet..." 
                                              FontStyle="Italic" 
                                              Foreground="Gray"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        
                        <TabItem Header="Key Points">
                            <ScrollViewer>
                                <StackPanel x:Name="KeyPointsPanel">
                                    <TextBlock Text="No key points extracted yet..." 
                                              FontStyle="Italic" 
                                              Foreground="Gray"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        
                        <TabItem Header="Decisions">
                            <ScrollViewer>
                                <StackPanel x:Name="DecisionsPanel">
                                    <TextBlock Text="No decisions detected yet..." 
                                              FontStyle="Italic" 
                                              Foreground="Gray"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        
                        <TabItem Header="Questions/Doubts">
                            <ScrollViewer>
                                <StackPanel x:Name="QuestionsPanel">
                                    <TextBlock Text="No questions suggested yet..." 
                                              FontStyle="Italic" 
                                              Foreground="Gray"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                    
                    <Button Grid.Row="2" 
                           x:Name="ExportButton" 
                           Content="📄 Export Report" 
                           Background="#3498DB" 
                           Foreground="White" 
                           Padding="15,8" 
                           FontWeight="Bold"
                           Margin="0,10,0,0"
                           IsEnabled="False"
                           Click="ExportButton_Click"/>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#34495E" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          x:Name="FooterStatus" 
                          Text="Ready to start meeting" 
                          Foreground="White" 
                          VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="🎵 Audio: " Foreground="White" VerticalAlignment="Center"/>
                    <Ellipse x:Name="AudioIndicator" Width="10" Height="10" Fill="Red" Margin="5,0"/>
                    <Rectangle Width="20"/>
                    <TextBlock Text="🤖 AI: " Foreground="White" VerticalAlignment="Center"/>
                    <Ellipse x:Name="AIIndicator" Width="10" Height="10" Fill="Red" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
