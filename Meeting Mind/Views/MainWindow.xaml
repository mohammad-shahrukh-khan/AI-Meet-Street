<Window x:Class="MeetingMind.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MeetingMind.Converters"
        xmlns:vm="clr-namespace:MeetingMind.ViewModels"
        mc:Ignorable="d"
        Title="MeetingMind" Height="600" Width="900">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <Button Content="Test UI" Command="{Binding TestCommand}" Margin="0,0,10,0" Background="LightBlue"/>
            <Button Content="Start Recording" Command="{Binding StartRecordingCommand}" Margin="0,0,10,0"/>
            <Button Content="Stop Recording" Command="{Binding StopRecordingCommand}" Margin="0,0,10,0"/>
            <ProgressBar Width="150" Height="20" IsIndeterminate="True" Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Live Transcript -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Live Transcript" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="#2c3e50"/>
                <ScrollViewer Height="400" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding LiveTranscript}" AcceptsReturn="True" 
                             TextWrapping="Wrap" IsReadOnly="True" 
                             Background="#f8f9fa" BorderBrush="#dee2e6" 
                             Padding="10" FontFamily="Segoe UI" FontSize="12"/>
                </ScrollViewer>
            </StackPanel>
            
            <!-- Right Panel: AI Summary with Sections -->
            <ScrollViewer Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="AI Summary" FontWeight="Bold" FontSize="16" Margin="0,0,0,15" Foreground="#2c3e50"/>
                    
                    <!-- Main Summary Section -->
                    <Border Background="#e8f4fd" BorderBrush="#bee5eb" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="📋 Summary" FontWeight="Bold" FontSize="14" Foreground="#0c5460" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding MainSummary}" AcceptsReturn="True" TextWrapping="Wrap" 
                                     IsReadOnly="True" Background="Transparent" BorderThickness="0" 
                                     FontFamily="Segoe UI" FontSize="12" MinHeight="60"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Key Decisions Section -->
                    <Border Background="#fff3cd" BorderBrush="#ffeaa7" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="🎯 Key Decisions" FontWeight="Bold" FontSize="14" Foreground="#856404" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding KeyDecisions}" AcceptsReturn="True" TextWrapping="Wrap" 
                                     IsReadOnly="True" Background="Transparent" BorderThickness="0" 
                                     FontFamily="Segoe UI" FontSize="12" MinHeight="60"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Action Items Section -->
                    <Border Background="#d1ecf1" BorderBrush="#bee5eb" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="✅ Action Items" FontWeight="Bold" FontSize="14" Foreground="#0c5460" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ActionItems}" AcceptsReturn="True" TextWrapping="Wrap" 
                                     IsReadOnly="True" Background="Transparent" BorderThickness="0" 
                                     FontFamily="Segoe UI" FontSize="12" MinHeight="60"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Follow-ups Section -->
                    <Border Background="#f8d7da" BorderBrush="#f5c6cb" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="📅 Follow-ups" FontWeight="Bold" FontSize="14" Foreground="#721c24" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding FollowUps}" AcceptsReturn="True" TextWrapping="Wrap" 
                                     IsReadOnly="True" Background="Transparent" BorderThickness="0" 
                                     FontFamily="Segoe UI" FontSize="12" MinHeight="60"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Raw Summary (for debugging) -->
                    <Border Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10">
                        <StackPanel>
                            <TextBlock Text="🔍 Raw Summary" FontWeight="Bold" FontSize="14" Foreground="#6c757d" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding SummaryText}" AcceptsReturn="True" TextWrapping="Wrap" 
                                     IsReadOnly="True" Background="Transparent" BorderThickness="0" 
                                     FontFamily="Segoe UI" FontSize="11" MinHeight="80" MaxHeight="120"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
            <Button Content="Export PDF" Command="{Binding ExportPdfCommand}" Margin="0,0,10,0"/>
            <Button Content="Clear Session" Command="{Binding ClearSessionCommand}"/>
        </StackPanel>
    </Grid>
</Window>
